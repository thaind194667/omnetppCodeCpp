    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/redoProject/${fileBasenameNoExtension}.exe",
            "stopAtEntry": false,
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "lldb",
            "miDebuggerArgs": "",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file",
        }
    ]
}